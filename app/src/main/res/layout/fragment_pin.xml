<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Activate Pin"
        android:id="@+id/textView2"
        android:layout_marginTop="90dp"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Enable Service"
        android:id="@+id/textView3"
        android:layout_marginTop="140dp"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"/>


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:checked="false"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

   <!-- <ListView
        android:id="@+id/listview"
        android:layout_marginTop="180dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>
-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="0.2"
        android:id="@+id/confirm_pin"
        android:text="Create PIN"
        android:textColor="@color/action_bar"
        android:textSize="20sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/switch3"
        android:layout_alignStart="@+id/textView3" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="0.2"
        android:id="@+id/set_pin"
        android:text="Change PIN"
        android:textColor="@color/action_bar"
        android:textSize="20sp"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/confirm_pin"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>